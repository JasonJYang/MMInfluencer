{
    "name": "MultimodalClassifier-5Fold",
    "n_gpu": 1,
    "k_fold": 5,

    "data_loader": {
        "type": "MultimodalDataLoader",
        "args": {
            "data_dir": "data/kg_dr/prepared",
            "use_multimodal": true,
            "label_relationship": "suitable_category",
            "target_entity_name": "product_category",
            "batch_size": 16,
            "seed": 0,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.2,
            "num_workers": 2,
            "embedding_dim": 300,
            "max_posts": 5,
            "max_bio_length": 100,
            "max_post_length": 100
        }
    },

    "arch": {
        "type": "MultimodalClassifier",
        "args": {
            "word_embedding_dim": 300,
            "lstm_hidden_dim": 256,
            "cnn_feature_dim": 2048,
            "fusion_dim": 512,
            "dropout": 0.5
        }
    },

    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-5,
            "amsgrad": true
        }
    },

    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "precision", "recall", "f1_score"
    ],

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },

    "trainer": {
        "epochs": 30,
        "save_dir": "saved/LSTM-ResNet50",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,
        
        "tensorboard": false
    }
}