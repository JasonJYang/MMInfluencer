{
    "name": "Multimodal-suitable_category",
    "n_gpu": 1,

    "data_loader": {
        "type": "KGDataLoader",
        "args":{
            "data_dir": "data/kg_dr/prepared/",
            "label_relationship": "suitable_category",
            "target_entity_name": "product_category",
            "use_multimodal": true,
            "batch_size": 128,
            "seed": 0,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.2,
            "num_workers": 2
        }
    },

    "arch": {
        "type": "Node2Vec",
        "args": {
            "emb_dim": 128,
            "walk_length": 20,
            "context_size": 10,
            "walks_per_node": 10,
            "num_negative_samples": 1
        }
    },

    "optimizer": {
        "type": "SparseAdam",
        "args":{
            "lr": 0.01
        }
    },

    "loss": "bce_withlogits_loss",
    "metrics": [
        "accuracy", "recall", "roc_auc", "pr_auc", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },

    "trainer": {
        "epochs": 30,

        "save_dir": "saved/node2vec/",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "max val_roc_auc",
        "early_stop": 10,

        "tensorboard": false
    }
}
